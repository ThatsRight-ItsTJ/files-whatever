{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MetaMCP Preflight/Consent Schema",
  "type": "object",
  "properties": {
    "task_id": {
      "type": "string"
    },
    "tool": {
      "type": "string"
    },
    "estimated_time_s": {
      "type": "integer",
      "minimum": 0
    },
    "estimated_ram_gb": {
      "type": "number",
      "minimum": 0
    },
    "estimated_disk_gb": {
      "type": "number",
      "minimum": 0
    },
    "estimated_cost_usd": {
      "type": "number",
      "minimum": 0
    },
    "requires_user_token": {
      "type": "boolean"
    },
    "requires_db_creds": {
      "type": "boolean"
    },
    "details": {
      "type": "string"
    }
  },
  "required": [
    "task_id",
    "tool",
    "estimated_time_s",
    "estimated_ram_gb"
  ]
}